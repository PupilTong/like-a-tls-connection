{
    "compilerOptions": {
      "module": "esnext",
      "target": "es2021",
      "noImplicitAny": true,
      "removeComments": false,
      "preserveConstEnums": true,
      "sourceMap": true,
      "isolatedModules": false,
      "moduleResolution": "node",
      "typeRoots": ["./node_modules/@types"],
      "outDir": "./dist",
      "declaration": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "skipLibCheck": true
    },
    "include": ["src", "test"],
    "exclude": ["node_modules"],
}